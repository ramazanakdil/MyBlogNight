@model List<Comment>
@{
    Layout = "~/Areas/Author/Views/Shared/_AuthorLayout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    body {
        background-color: #f4f4f9;
    }

    .container {
        margin-top: 30px;
        margin-bottom: 30px;
    }

    .page-header {
        text-align: center;
        color: #333;
        margin-bottom: 30px;
    }

    table {
        background: #fff;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    th {
        background: #007bff;
        color: white;
        text-align: center;
    }

    td {
        color: #555;
    }

    tr:hover {
        background: #f1f1f1;
    }

    .table-container {
        overflow-x: auto;
    }
</style>

<div class="container">
    <h1 class="page-header">Yorumlar</h1>
    <div class="table-container">
        <table class="table table-striped table-bordered text-center">
            <thead>
                <tr>
                    <th>Tarih</th>
                    <th>Yorum</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>@item.CommentDetail</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>