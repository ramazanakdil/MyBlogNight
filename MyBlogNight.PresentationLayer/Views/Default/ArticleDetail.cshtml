@model Article

@{

    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog Detay</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            margin: 0;
            padding: 0;
            background-color: #f4f4f9;
        }

        .container {
            width: 90%;
            max-width: 800px;
            margin: 20px auto;
            background: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        h1 {
            font-size: 2em;
            color: #333;
            margin-bottom: 10px;
        }

        .meta {
            color: #888;
            font-size: 0.9em;
            margin-bottom: 15px;
        }

            .meta .dot {
                display: inline-block;
                margin: 0 5px;
                width: 5px;
                height: 5px;
                background: #333;
                border-radius: 50%;
            }

        .blog-image {
            margin-bottom: 20px;
            text-align: center;
        }

            .blog-image img {
                width: 100%;
                max-height: 400px;
                object-fit: cover;
                border-radius: 10px;
            }

        .content {
            color: #555;
            font-size: 1.1em;
            margin-bottom: 30px;
        }

        .author {
            display: flex;
            align-items: center;
            gap: 15px;
            background: #f9f9f9;
            padding: 15px;
            border-radius: 10px;
            margin-bottom: 30px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

            .author img {
                width: 80px;
                height: 80px;
                border-radius: 50%;
                object-fit: cover;
            }

        .author-info h4 {
            margin: 0;
            color: #333;
            font-size: 1.2em;
        }

        .author-info p {
            color: #666;
            font-size: 0.95em;
        }

        .comments-section {
            margin-bottom: 30px;
        }

            .comments-section h3 {
                color: #333;
                margin-bottom: 15px;
            }

        .comment {
            margin-bottom: 15px;
            padding: 10px;
            background: #f9f9f9;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

            .comment .comment-header {
                font-weight: bold;
                margin-bottom: 5px;
            }

            .comment .comment-date {
                font-size: 0.9em;
                color: #888;
            }

        .comment-form {
            margin-top: 20px;
        }

            .comment-form h3 {
                margin-bottom: 15px;
                color: #333;
            }

            .comment-form input, .comment-form textarea {
                width: 100%;
                padding: 10px;
                margin: 10px 0;
                border: 1px solid #ddd;
                border-radius: 5px;
                font-size: 1em;
            }

            .comment-form button {
                padding: 10px 20px;
                background: #007bff;
                color: #fff;
                border: none;
                border-radius: 5px;
                font-size: 1em;
                cursor: pointer;
                transition: background 0.3s;
            }

                .comment-form button:hover {
                    background: #0056b3;
                }
    </style>
</head>
<body>
    <br />
    <br />
    <br />
    <br />
    <br />
    <div class="container">

        <h1>@Model.Title</h1>
        <p class="meta">
            <span>Yayınlanma Tarihi: @Model.CreatedDate.ToString("dd.MM.yyyyy")</span>
            <span class="dot"></span>
            <span>Kategori: @Model.Category.CategoryName</span>
        </p>

        <div class="blog-image">
            <img src="@Model.CoverImageUrl" style="width:800px; height:400px;" alt="Blog Görseli">
        </div>

        <div class="content">
            <p>@Model.Detail</p>
        </div>

        <div class="author">
            <img src="@Model.AppUser.ImageUrl" alt="Yazar Fotoğrafı">
            <div class="author-info">
                <h4>@Model.AppUser.Name @Model.AppUser.Surname</h4>
                <p>@Model.AppUser.Description</p>
            </div>
        </div>


        <div class="comments-section">
            <h3>Yorumlar</h3>

                <div class="comment">
                    <div class="comment-header">Ramazan Akdil</div>
                    <div class="comment-date">26 Aralık 2024</div>
                    <p>Çok Başarılı!</p>
                </div>

        </div>


        <div class="comment-form">

            @await Component.InvokeAsync("_DefaultAddCommentComponentPartial")
        </div>
    </div>
    <br />
    <br />
    <br />
</body>
</html>